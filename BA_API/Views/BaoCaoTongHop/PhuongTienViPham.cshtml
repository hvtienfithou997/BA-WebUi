
@{
    ViewData["Title"] = "Phương tiện vi phạm hình ảnh";
}


<div class="col-xl-12 col-lg-12">
    <div class="card mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">
                Tra cứu thông tin
            </h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-xl-3 col-lg-6">
                    <label for="transmissionUnit">Đơn vị truyền dữ liệu</label>
                    <select class="form-control" id="transmissionUnit" placeholder="Đơn vị truyền dữ liệu">
                        <option value="-1">Chọn đơn vị truyền dữ liệu</option>
                    </select>
                </div>
                <div class="form-group col-xl-3 col-lg-6">
                    <label for="department">Sở GTVT</label>
                    <select class="form-control" id="department" placeholder="Sở GTVT">
                        <option value="-1">Chọn sở GTVT</option>
                    </select>
                </div>
                <div class="form-group col-xl-3 col-lg-6">
                    <label for="vehicleType">Loại hình</label>
                    <select class="form-control" id="vehicleType" placeholder="Loại hình">
                        <option value="-1">Tất cả loại hình</option>
                    </select>
                </div>
                <div class="form-group col-xl-3 col-lg-6"></div>
                <div class="form-group col-xl-3 col-lg-6">
                    <label for="start">Từ ngày</label>
                    <input type="text" class="form-control" id="start" name="start" placeholder="Từ ngày">
                </div>
                <div class="form-group col-xl-3 col-lg-6">
                    <label for="end">Đến ngày</label>
                    <input type="text" class="form-control" id="end" name="end" placeholder="Đến ngày">
                </div>
            </div>
            <button type="submit" name="btn-result" class="btn btn-info" style="margin: auto">Tìm kiếm</button>
        </div>
    </div>
</div>

<!-- Hiển thị dữ liệu-->
<div class="col-xl-12 col-lg-12">
    <div class="card mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Báo cáo tổng hợp phương tiện vi phạm</h6>
            <h6 class="total font-weight-bold"></h6>
        </div>
        <div class="table-responsive p-3">
            <table id="report" class="table table-bordered text-center" style="color: black">
                <thead>
                    <tr>
                        <th rowspan="2" style="width: 10px;">STT</th>
                        <th rowspan="2">Biển kiểm soát</th>
                        <th rowspan="2">Sở GTVT</th>
                        <th rowspan="2">Đơn vị vận tải</th>
                        <th rowspan="2">Đơn vị truyền dữ liệu</th>
                        <th colspan="2">Ảnh vi phạm</th>
                        <th rowspan="2">Tổng số ảnh</th>
                    </tr>
                    <tr>
                        <th>Lần</th>
                        <th>%</th>
                    </tr>
                </thead>
                <tbody></tbody>
                <tfoot><tr></tr></tfoot>
            </table>
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination"></ul>
        </nav>
    </div>
</div>

<script>
    datePicker();
    loadLoaiHinh();
    var department_id = '@ViewBag.department_id';
    var provider_id = '@ViewBag.provider_id';
    var start = '@ViewBag.start';
    var end = '@ViewBag.end';
    var index = '@ViewBag.index';

    $(document).ready(function () {
        loadDVTruyenDL();
        loadSoGTVT("");
        $("#transmissionUnit").select2();
        $("#department").select2();

        if (USER_ROLE === 2 || USER_ROLE === 3) {
            $("#department").prop("disabled", true);
            $("#department1").prop("disabled", true);
            loadSoGTVT(ALLOW_QUERY.Department);
        } else if (USER_ROLE === 4 || USER_ROLE === 5) {
            $("#department1").val(ALLOW_QUERY.Company);
            $("#department").val(ALLOW_QUERY.Company);
            $("#transportUnit").val(ALLOW_QUERY.Company);
            $("#department1").prop("disabled", true);
            $("#department").prop("disabled", true);
            $("#transportUnit").prop("disabled", true);
        } else if (USER_ROLE === 6 || USER_ROLE === 7) {
            $("#transmissionUnit").val(ALLOW_QUERY.Provider);
            $("#transmissionUnit").prop("disabled", true);
        }

    });

    function loadSoGTVT(deparment) {
        callApi(`${REP_URL}department/all`, null, "GET", function (obj) {
            let res = "<option value='-1'>Chọn sở GTVT</option>";
            obj.forEach(function (pro) {
                res += `<option value="${pro.id}">${pro.name}</option>`;
            });
            $("#department").html(res);
            if (deparment !== 0)
                $("#department").val(deparment);
        });
    }

    function loadDVTruyenDL() {
        callApi(`${REP_URL}provider/all`, null, "GET", function (obj) {
            let res = "<option value='-1'>Chọn đơn vị truyền dữ liệu</option>";
            obj.forEach(function (pro) {
                res += `<option value="${pro.id}">${pro.name}</option>`;
            });
            $("#transmissionUnit").html(res);
            //if (id !== "") {
            //    $("#department1").val(id);
            //    showDepartmentReport();
            //}
        });
    }

    $('[name="btn-result"]').click(function(e) {
        e.preventDefault();
        index = 0;
        showResult();
    });

    function showResult() {

        var start = $("#start").val();
        var end = $("#end").val();
        start = start !== "" ? ConvertToUnix(start) : 0;
        end = end !== "" ? ConvertToUnix(end) : 0;
        var department = $("#department").val();
        var vehicleType = $("#vehicleType").val();
        var provider_id = $("#transmissionUnit").val();

        $("#report tbody tr").remove();
        $("#report tfoot tr th").remove();
        window.history.pushState(window.location.href, "Báo cáo phương tiện vi phạm hình ảnh", `?department_id=${department}&start=${start}&end=${end}&index=${index}&provider_id=${provider_id}&vehicleType=${vehicleType}`);
        callApi(`${REP_URL}generalreport/violate?department_id=${department}&start=${start}&end=${end}&index=${index}&provider_id=${provider_id}`, null, "GET", function (item) {
            if (item.records > 0) {
                $.notify("Tải dữ liệu thành công", "success");
                let res = "";
                let count = 1;
                item.data.forEach(function (pro) {
                    res += "<tr>";
                    res += `<td>${count}</td>`;
                    res += `<td class="text-left">${pro.vehicle}</td>`;
                    res += `<td class="text-left">${pro.department}</td>`;
                    res += `<td class="text-left">${pro.company}</td>`;
                    res += `<td class="text-left">${pro.provider}</td>`;
                    res += `<td>${pro.image_violate_count}</td>`;
                    res += `<td>${pro.image_rate}</td>`;
                    res += `<td>${pro.image_total}</td>`;
                    res += "</tr>";
                    count++;
                });
                let totalRes = `<th>Tổng</th>`;
                totalRes += `<th></th>`;
                totalRes += `<th></th>`;
                totalRes += `<th></th>`;
                totalRes += `<th></th>`;
                totalRes += `<th>${item.totalImages}</th>`;
                totalRes += `<th>${item.totalImageRate}</th>`;
                totalRes += `<th>${item.totalImageViolateCount}</th>`;
                $("#report tbody").html(res);
                $("#report tfoot tr").html(totalRes);
                $("#report tfoot tr th").addClass("text-danger");
                Paging(index, 'showResult', item.records);
            } else {
                $.notify(`Không tìm thấy kết quả nào`, "error");
            }
        });
    }
</script>
