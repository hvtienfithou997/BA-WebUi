
@{
    ViewData["Title"] = "Sở giao thông vận tải";
}

<div class="col-xl-12 col-lg-12">
    <div class="card mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">
                Tra cứu thông tin
            </h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-xl-6 col-lg-6">
                    <label for="department1">Sở GTVT</label>
                    <select class="form-control" id="department1" placeholder="Sở GTVT">
                    </select>
                </div>
                <div class="form-group col-xl-6 col-lg-6">
                    <label for="vehicleType">Loại hình</label>
                    <select class="form-control" id="vehicleType" placeholder="Loại hình">
                        <option value="-1">Tất cả loại hình</option>
                    </select>
                </div>
                <div class="form-group col-xl-6 col-lg-6">
                    <label for="start">Từ ngày</label>
                    <input type="text" class="form-control" id="start" name="start" placeholder="Từ ngày">
                </div>
                <div class="form-group col-xl-6 col-lg-6">
                    <label for="end">Đến ngày</label>
                    <input type="text" class="form-control" id="end" name="end" placeholder="Đến ngày">
                </div>
                <button type="submit" name="showDepartmentReport" class="btn btn-info" style="margin: auto">Xem báo cáo</button>
            </div>
        </div>
    </div>
</div>

<!-- Hiển thị dữ liệu-->
<div class="col-xl-12 col-lg-12">
    <div class="card mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Báo cáo tổng hợp sở giao thông vận tải</h6>
            <h6 class="total font-weight-bold"></h6>
            @*<div id="dvjson"></div>
            <button class="btn btn-success" name="exportToExcel">Xuất Excel</button>*@
        </div>
        <div class="table-responsive p-3">
            <table id="synthesisReport" class="table table-bordered text-center" style="color: black">
                <thead>
                    <tr>
                        <th rowspan="2" style="width: 10px;">STT</th>
                        <th rowspan="2">Đơn vị vận tải</th>
                        <th rowspan="2">Mã số thuế</th>
                        <th colspan="3">Xe</th>
                    </tr>
                    <tr>
                        <th>Vi phạm</th>
                        <th>Σ</th>
                        <th>%</th>
                    </tr>
                </thead>
                <tbody></tbody>
                <tfoot><tr></tr></tfoot>
            </table>
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination"></ul>
        </nav>
    </div>
</div>
@*<script src="~/js/bao-cao.js"></script>*@


<script>
    var id = '@ViewBag.id';
    var start = '@ViewBag.start';
    var end = '@ViewBag.end';
    var vehicleType = '@ViewBag.vehicleType';
    var index = '@ViewBag.index';
    $(document).ready(function () {
        datePicker();
        loadLoaiHinh();
        $("#vehicleType").val(vehicleType);
        loadSoGTVT();

        //if (start > 0)
        //    $('[name="start"]').datepicker('setDate', EpochToHuman(start));
        //if (end > 0)
        //    $('[name="end"]').datepicker('setDate', EpochToHuman(end));
        if (start > 0)
            $('[name="start"]').datepicker({ format: 'dd/mm/yyyy'}).datepicker('setDate', EpochToHuman(start));
        if (end > 0)
            $('[name="end"]').datepicker({ format: 'dd/mm/yyyy' }).datepicker('setDate', EpochToHuman(end));




        showDepartmentReport(index);
    });


    function loadSoGTVT() {
        callApi(`${REP_URL}department/all`, null, "GET", function (obj) {
            let res = "<option value='-1'>Chọn sở GTVT</option>";
            obj.forEach(function (pro) {
                res += `<option value="${pro.id}">${pro.name}</option>`;
            });
            $('#department1').select2();
            $("#department1").html(res);
           
            if (id !== "") {
                $("#department1").val(id);
                //showDepartmentReport();
            }
        });
    }
    $("[name='showDepartmentReport']").click(function (e) {
        e.preventDefault();
        index = 0;
        showDepartmentReport(index);
    });

    function showDepartmentReport(index) {
        var department = $("#department1").val();
        if (id !== "")
            department = id;
        var vehicleType = $("#vehicleType").val();
        if (vehicleType === "" || vehicleType == null) {
            $.notify("Chưa chọn loại hình");
            return;
        }
        var start = $("#start").val();
        var end = $("#end").val();
        start = start !== "" ? ConvertToUnix(start) : 0;
        end = end !== "" ? ConvertToUnix(end) : 0;
        //if (start < 1 || end < 1 || department === "-1") {
        //    $.notify("Cần nhập đầy đủ các thông tin tìm kiếm!", "error");
        //    return;
        //}
        $("#report tbody tr").remove();
        $("#report tfoot tr th").remove();
        window.history.pushState(window.location.href, "Báo cáo sở giao thông vận tải", `?id=${department}&start=${start}&end=${end}&index=${index}&vehicleType=${vehicleType}`);
        callApi(`${REP_URL}topicalreport/department/${department}?start=${start}&end=${end}&index=${index}&vehicleType=${vehicleType}`, null, "GET", function (item) {
            if (item.records > 0) {
                $.notify("Tải dữ liệu thành công", "success");
                let res = "";
                let count = 1;
                item.data.forEach(function(pro) {
                    res += "<tr>";
                    res += `<td>${count}</td>`;
                    res += `<td class="text-left"><a href="/bao-cao/tong-hop/don-vi-van-tai?company=${pro.company_id}&vehicle=&start=${start}&end=${end}&vehicleType=${vehicleType}&index=${0}&department=${department}">${pro.company_name}</a></td>`;
                    res += `<td class="text-left">${pro.company_tax}</td>`;
                    res += `<td>${pro.vehicle_violate}</td>`;
                    res += `<td>${pro.vehicle_total}</td>`;
                    res += `<td>${pro.vehicle_rate}</td>`;
                    res += "</tr>";
                    count++;
                });

                let totalRes = `<th>Tổng</th>`;
                totalRes += `<th></th>`;
                totalRes += `<th></th>`;
                totalRes += `<th>${item.vehicleViolateSum}</th>`;
                totalRes += `<th>${item.vehicleTotalSum}</th>`;
                totalRes += `<th>${item.vehicleRateAvg}</th>`;
                $("#synthesisReport tbody").empty();
                $("#synthesisReport tbody").html(res);
                $("#synthesisReport tfoot tr").html(totalRes);
                $("#synthesisReport tfoot tr th").addClass("text-danger");
                Paging(index, 'showDepartmentReport', item.records);
            } else {
                $.notify("Không tìm thấy kết quả nào", "error");
            }
        });
    }

    $("[name='exportToExcel']").click(function(e) {
        e.preventDefault();
        var department = $("#department1").val();
        if (id !== "")
            department = id;
        var vehicleType = $("#vehicleType").val();
        var start = $("#start").val();
        var end = $("#end").val();
        start = start !== "" ? ConvertToUnix(start) : 0;
        end = end !== "" ? ConvertToUnix(end) : 0;


        //callApi(`${REP_URL}topicalreport/department/${department}/export?start=${start}&end=${end}&vehicleType=${vehicleType}`, null, "GET", function(item) {
        callApi(`${REP_URL}topicalreport/department/60/export?start=1585674000000&end=1588265999000&vehicleType=-1`, null, "GET", function(item) {
            $("#dvjson").excelexportjs({
                containerid: "dvjson"
                , datatype: 'json'
                , dataset: item.data
                , columns: getColumns(item.data)
            });
        });
    });

</script>

