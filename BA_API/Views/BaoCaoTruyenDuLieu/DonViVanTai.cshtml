
@{
    ViewData["Title"] = "Báo cáo truyền dữ liệu đơn vị vận tải";
}

<div class="col-xl-12 col-lg-12">
    <div class="card mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">
                Tra cứu thông tin
            </h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-xl-4 col-lg-6">
                    <label for="department">Sở GTVT</label>
                   
                    <select class="form-control" id="department" placeholder="Sở GTVT">
                        <option value="-1">Chọn sở GTVT</option>
                    </select>
                </div>
                <div class="form-group col-xl-4 col-lg-6">
                    <label for="transportUnit">Đơn vị vận tải</label>
                    <select class="form-control" id="transportUnit" placeholder="Đơn vị vận tải">
                        <option value="-1">Chọn đơn vị vận tải</option>
                    </select>
                </div>
                <div class="form-group col-xl-4 col-lg-6">
                    <label for="date">Chọn ngày</label>
                    <input type="text" class="form-control" id="date" name="date" placeholder="Chọn ngày">
                </div>
            </div>
            <button type="submit" name="btnReport" class="btn btn-info" style="margin: auto">Tìm kiếm</button>
        </div>
    </div>
</div>

<!-- Hiển thị dữ liệu-->
<div class="col-xl-12 col-lg-12">
    <div class="card mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Báo cáo truyền dữ liệu đơn vị vận tải</h6>
            <h6 class="total font-weight-bold"></h6>
        </div>
        <div class="table-responsive p-3">
            <table id="report" class="table table-bordered text-center" style="color: black">
                <thead>
                    <tr>
                        <th rowspan="2" style="width: 10px;">STT</th>
                        <th rowspan="2">Biển kiểm soát</th>
                        <th rowspan="2">Loại hình</th>
                        <th rowspan="2">Đơn vị truyền dữ liệu</th>
                        <th rowspan="2">Số bản tin</th>
                    </tr>
                </thead>
                <tbody></tbody>
                <tfoot><tr></tr></tfoot>
            </table>
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination"></ul>
        </nav>
    </div>
</div>

<script>datePickerOne()</script>
<script>

    var companyId = '@ViewBag.companyId';

    var date = '@ViewBag.date';

    var index = '@ViewBag.index';

    var department = '@ViewBag.department';
    $(document).ready(function () {
        addClassActive("category-BAO_CAO", "BAO_CAO_TRUYEN_DL_DVVT");
        
        $("#department").select2();
        $("#transportUnit").select2();

        

        if (date > 0)
            $('[name="date"]').datepicker({format:'dd/mm/yyyy'}).datepicker('setDate', EpochToHuman(date));

        
        $("#department").change(function () {
            loadDVVT($(this).val());
        });

        if (USER_ROLE === 2 || USER_ROLE === 3) {
            $("#department").prop("disabled", true);
            setTimeout(function () {
                loadSoGTVT(ALLOW_QUERY.Department);
            },
                500);
        } else if (USER_ROLE === 4 || USER_ROLE === 5) {
            setTimeout(function () {
                    loadSoGTVT(ALLOW_QUERY.Department);
                },
                500);
            $("#department").prop("disabled", true);
            $("#transportUnit").prop("disabled", true);
        } else if (USER_ROLE === 6 || USER_ROLE === 7) {
            $("#transmissionUnit").val(ALLOW_QUERY.Provider);
            $("#transmissionUnit").prop("disabled", true);
        }
        loadSoGTVT(0);
        setTimeout(function () {
            if (department !== "")
                showResult(index);
        },1500);
    });

    function loadSoGTVT(sgtvt) {
        callApi(`${REP_URL}department/all`, null, "GET", function (obj) {
            let res = "<option value='-1'>Chọn sở GTVT</option>";
            obj.forEach(function (pro) {
                res += `<option value="${pro.id}">${pro.name}</option>`;
            });
            $("#department").html(res);
            if (department !== "") {
                $("#department").val(department);
                loadDVVT(department);
            }

            if (sgtvt !== 0) {
                $("#department").val(sgtvt);
                loadDVVT(sgtvt);
            }

        });
    }


    $("[name='btnReport']").click(function () {
        index = 0;
        showResult(index);
    });
    function showResult(index) {

        var transportUnit = $("#transportUnit").val();
        var date = $("#date").val();
        date = date !== "" ? ConvertToUnix(date) : 0;
        let department = $("#department").val();
        $("#report tbody tr").remove();
        $("#report tfoot tr th").remove();
        window.history.pushState(window.location.href, "Báo cáo đơn vị vận tải", `?companyId=${transportUnit}&department=${department}&date=${date}&index=${index}`);

        callApi(`${REP_URL}datatransfer/company/${transportUnit}?department=${department}&date=${date}&index=${index}`, null, "GET", function (item) {
            if (item.records > 0) {
                $.notify("Tải dữ liệu thành công", "success");
                let res = "";
                let count = 1;
                item.data.forEach(function (pro) {
                    res += "<tr>";
                    res += `<td>${count}</td>`;
                    res += `<td class="text-left"><a href="/bao-cao-truyen-du-lieu/truyen-du-lieu/bien-so-xe?vehicle=${pro.vehicle}&start=${date}&end=${date}">${pro.vehicle}</a></td>`;
                    res += `<td class="text-left">${pro.vehicle_type_name}</td>`;
                    res += `<td class="text-left">${pro.provider_name}</td>`;
                    res += `<td>${pro.image_count}</td>`;
                    res += "</tr>";
                    count++;
                });

                let totalRes = `<th>Tổng</th>`;
                totalRes += `<th></th>`;
                totalRes += `<th></th>`;
                totalRes += `<th></th>`;
                totalRes += `<th>${item.totalWaypoints}</th>`;
                $("#report tbody").html(res);
                $("#report tfoot tr").html(totalRes);
                $("#report tfoot tr th").addClass("text-danger");
                Paging(index, 'showResult', item.records);

            } else {
                $.notify(`Không tìm thấy kết quả nào`, "error");
            }
        });
    }

    function loadDVVT(value) {
        callApi(`${REP_URL}company/department/${value}`, null, "GET", function (obj) {
            let res = "<option value='-1'>Chọn đơn vị vận tải</option>";
            obj.forEach(function (pro) {
                res += `<option value="${pro.id}">${pro.name}</option>`;
            });
            $("#transportUnit").html(res);
            if (companyId !== "")
                $("#transportUnit").val(companyId);

            if (ALLOW_QUERY.Company !== 0) {
                $("#transportUnit").val(ALLOW_QUERY.Company);
            }
        });
    }


</script>