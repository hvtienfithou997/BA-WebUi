
@{
    ViewData["Title"] = "Không truyền dữ liệu liên tiếp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="col-xl-12 col-lg-12">
    <div class="card mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">
                Tra cứu thông tin
            </h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-xl-4 col-lg-6">
                    <label for="department">Sở GTVT</label>
                    <select class="form-control" id="department" placeholder="Sở GTVT">
                        <option value="-1">Chọn sở GTVT</option>
                    </select>
                </div>
                <div class="form-group col-xl-4 col-lg-6">
                    <label for="transmissionUnit">Đơn vị truyền dữ liệu</label>
                    <select class="form-control" id="transmissionUnit" placeholder="Đơn vị truyền dữ liệu">
                        <option value="0">Chọn đơn vị truyền dữ liệu</option>
                    </select>
                </div>
                <div class="form-group col-xl-3 col-lg-6">
                    <label for="vehicleType">Loại hình</label>
                    <select class="form-control" id="vehicleType" placeholder="Loại hình">
                        <option value="-1">Chọn loại hình</option>
                    </select>
                </div>
                <div class="form-group col-xl-3 col-lg-6">
                    <label for="month">Chọn tháng</label>
                    <input type="text" class="form-control" id="month" name="month" placeholder="Chọn tháng">
                </div>

            </div>
            <button type="submit" name="btn-result" class="btn btn-info" style="margin: auto">Tìm kiếm</button>
        </div>
    </div>
</div>



<!-- Hiển thị dữ liệu-->
<div class="col-xl-12 col-lg-12">
    <div class="card mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Báo cáo không truyền dữ liệu theo liên tiếp</h6>
            <h6 class="total font-weight-bold"></h6>
        </div>
        <div class="table-responsive p-3">
            <table id="result" class="table table-bordered text-center" style="color: black">
                <thead>
                <tr>
                    <th rowspan="2" style="width: 10px;">STT</th>
                    <th rowspan="2">Biển kiểm soát</th>
                    <th rowspan="2">Loại hình</th>
                    <th rowspan="2">Đơn vị vận tải</th>
                    <th rowspan="2">Đơn vị truyền dữ liệu</th>
                    <th rowspan="2">Số ngày không truyền</th>
                </tr>
                </thead>
                <tbody></tbody>
                <tfoot><tr></tr></tfoot>
            </table>
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination"></ul>
        </nav>
    </div>
</div>





<script>
    $(function () {
        addClassActive("category-BAO_CAO", "BAO_CAO_KHONG_TRUYEN_DL_LIEN_TIEP");
        $('[name="month"]').datepicker({
            format: "mm/yyyy",
            startView: "months",
            minViewMode: "months"
        });
        loadSoGTVT();
        loadDVTruyenDL();
        loadLoaiHinh();
    });

    function loadSoGTVT() {
        callApi(`${REP_URL}department/all`, null, "GET", function (obj) {
            let res = "<option value='-1'>Chọn sở GTVT</option>";
            obj.forEach(function (pro) {
                res += `<option value="${pro.id}">${pro.name}</option>`;
            });
            $('#department').select2();
            $("#department").html(res);
        });
    }

    function loadDVTruyenDL() {
        callApi(`${REP_URL}provider/all`, null, "GET", function (obj) {
            let res = "<option value='-1'>Chọn đơn vị truyền dữ liệu</option>";
            obj.forEach(function (pro) {
                res += `<option value="${pro.id}">${pro.name}</option>`;
            });
            $('#transmissionUnit').select2();
            $("#transmissionUnit").html(res);
        });
    }

    $("[name='btn-result']").click(function () {
        let index = 0;
        showResult(index);
    });

    function showResult(index) {
        var provider = $("#transmissionUnit").val();
        var department = $("#department").val();
        var vehicleType = $("#vehicleType").val();
        var month = $("#month").val();
        $("#result tbody tr").remove();
        window.history.pushState(window.location.href, "Danh mục phương tiện", `?provider=${provider}&department=${department}&vehicleType=${vehicleType}&month=${month}&index=${index}`);
        //callApi(`${REP_URL}vehicle?provider=${provider}&department=${department}&vehicleType=${vehicleType}&month=${month}&index=${index}`, null, "GET", function (item) {
        callApi(`${API_THONG_KE}imagereport/non-transfer?department=${department}&provider=${provider}&vehicleType=${vehicleType}&month=${month}&index=1`, null, "GET", function (item) {
                $.notify("Tải dữ liệu thành công", "success");
                let res = "";
                let count = 1;
                item.data.forEach(function (pro) {
                    res += "<tr>";
                    res += `<td>${count}</td>`;
                    res += `<td class="text-left"><a href="/bao-cao-truyen-du-lieu/truyen-du-lieu/bien-so-xe?vehicle=${pro.vehicle}">${pro.vehicle}</a></td>`;
                    res += `<td class="text-left">${pro.vehicleType}</td>`;
                    res += `<td class="text-left">${pro.companyId}</td>`;
                    res += `<td class="text-left">${pro.providerId}</td>`;
                    res += `<td class="text-right">${pro.day}</td>`;
                    res += "</tr>";
                    count++;
                });
                $("#result tbody").html(res);
                //Paging(index, 'showResult', item.records);
        });
    }

</script>